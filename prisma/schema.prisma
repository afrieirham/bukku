// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Transactions {
    id Int @id @default(autoincrement())

    // transaction property
    type     String
    quantity Int
    cost     Decimal

    // inventory (calculated property)
    totalQuantity Int
    totalAsset    Decimal
    costPerUnit   Decimal

    // pointer to previous transaction
    previousId Int?          @unique
    previous   Transactions? @relation("BasedOn", fields: [previousId], references: [id])
    next       Transactions? @relation("BasedOn")

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
